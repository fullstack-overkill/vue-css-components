/* The Dialog */

modal-color1 = #ffffff
modal-color2 = #303030
modal-color3 = #666666
modal-color4 = #004EA1

.screen-modal
    width: 400px
    height 264px
    border 1px solid #979797
    .modal-container
        display: flex
        justify-content: center
        align-items: center
        width: 100%
        height 100%
        background-color: rgba(0,0,0,0.32)
        .modal-shadow
            .modal
                display: flex
                flex-direction: column
                padding: 16px
                width: 240px
                height 156px
                border-radius: 4px
                background-color: modal-color1 
                .modal-header
                    font-family: 'Roboto', sans-serif;
                    font-size: 20px
                    font-weight: 500
                    color: modal-color2
                .modal-desc
                    font-family: 'Roboto', sans-serif;
                    font-size: 16px
                    font-weight: 500
                    color: modal-color3
                    flex: 1
                .modal-actions
                    display: flex
                    justify-content: flex-end           

.paper-comp-shadow
    width: 300px
    min-height: 200px
