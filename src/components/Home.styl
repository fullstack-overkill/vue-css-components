
home-color1 = #ffffff
home-color2 = #F6F2EF

.home
    display: flex
    flex-direction: column
    align-items: center
    min-width: 100vw
    min-height: 100vh
    padding-top: 39px
    background-color: home-color2

.paper-shadow
    width: 100%
    max-width: 1093px
    min-height: 500px
    box-shadow: 
    0px 2px 1px -1px rgba(0, 0, 0, 0.2), 
    0px 1px 1px 0px rgba(0, 0, 0, 0.14), 
    0px 1px 3px 0px rgba(0,0,0,.12)
    .paper
        display: flex
        flex-direction: column
        width: 100%
        height 100%
        max-width: 1093px
        min-height: 500px
        padding: 16px
        background-color: home-color1

.group-comp
    display: flex
    flex-direction: column
    height min-content
    width 100%
    align-items: center
    .group-title
        width: 100%
        font-family: 'Lato','Roboto', sans-serif;
        font-weight: 300
        font-size: 24px
        text-align: center
    .group-divider   
        display: flex
        border-color: rgba(0,0,0,.12)
        border-width: 1px 0 0
        margin-block-start: 0.5em;
        margin-block-end: 0.5em;
        width: 100% 

.btn-group
    width: 100%
    flex-direction: column
    display: flex
    justify-content: center
    max-width: 600px
    display: flex
    justify-content: space-around
    margin: 20px 0px 20px 0px
    align-items: center

