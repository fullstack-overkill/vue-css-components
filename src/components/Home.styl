    0px 1px 3px 0px rgba(0,0,0,.12)
    .paper-comp
        display: flex
        flex-direction: column
        width: 100%
        height 100%
        min-height: 400px
        padding: 16px
        background-color: home-color1
        .paper-title
            width: 100%
